<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3B5998"
    android:textAlignment="center"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="61dp"
    tools:layout_editor_absoluteY="-35dp">

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="682dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/fb_logo_container"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginTop="76dp"
            android:background="#FEFEFE"
            android:elevation="10dp"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/fb_logo"
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:srcCompat="@drawable/facebook_logo" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="304dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:paddingRight="12dp"
                android:text="English"
                android:textColor="#A9FFFFFF"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/dot"
                android:layout_width="4dp"
                android:layout_height="4dp"
                app:srcCompat="@drawable/ic_baseline_brightness_1_24" />

            <TextView
                android:id="@+id/changeLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:paddingLeft="12dp"
                android:text="Change"
                android:textColor="#BCFFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:layout_marginTop="84dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/accountInput"
                android:layout_width="332dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:hint="Email or Phone"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF"
                android:textColorHint="#9AFFFFFF"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/editTextTextPassword"
                android:layout_width="332dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#FFFFFF"
                android:textColorHint="#9AFFFFFF"
                android:textSize="22sp" />

            <Button
                android:id="@+id/button"
                android:layout_width="332dp"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#22FFFFFF"
                app:backgroundTint="@null"
                android:text="LOG IN"
                android:textColor="#81FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="86dp"
            android:text="Sign Up for Facebook "
            android:textColor="#C8FFFFFF"
            android:textSize="20sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="114dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Forgot Password?"
                android:textColor="#C8FFFFFF"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="27dp"
                android:layout_height="24dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_help_24" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>